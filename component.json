{
  "title": "AWS S3",
  "description": "Integration component that can read and write to AWS S3",
  "buildType": "docker",
  "docsUrl": "https://github.com/elasticio/amazon-s3-component",
  "credentials": {
    "fields": {
      "accessKeyId": {
        "label": "Access Key Id",
        "required": true,
        "viewClass": "TextFieldView"
      },
      "accessKeySecret": {
        "label": "Secret Access Key",
        "required": true,
        "viewClass": "PasswordFieldView"
      },
      "region": {
        "label": "Region",
        "required": true,
        "viewClass": "TextFieldView"
      }
    }
  },
  "actions": {
    "streamToFile": {
      "title": "Write file",
      "description": "Put stream as file into S3 bucket",
      "main": "./lib/actions/streamToFile.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Default Bucket Name and folder",
          "placeholder": "my-fancy-bucket",
          "note": "Default Bucket Name and folder will override if 'Bucket Name and folder' field is set in metadata",
          "required": false
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": false
            },
            "bucketName": {
              "type": "string",
              "title":"Bucket Name and folder",
              "required": false
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "ETag": {
              "type": "string",
              "required": true
            },
            "Location": {
              "type": "string",
              "required": false
            },
            "Key": {
              "type": "string",
              "required": true
            },
            "Bucket": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "readFile": {
      "title": "Read file",
      "description": "Read file from S3 bucket",
      "main": "./lib/actions/readFile.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Default Bucket Name and folder",
          "placeholder": "my-fancy-bucket",
          "note": "Default Bucket Name and folder will override if 'Bucket Name and folder' field is set in metadata",
          "required": false
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            },
            "bucketName": {
              "title":"Bucket Name and folder",
              "type": "string",
              "required": false
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "getAllFilesInBucket": {
      "title": "Get filenames",
      "description": "Emit individually all filenames from S3 bucket",
      "main": "./lib/actions/getAllFilesInBucket.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Default Bucket Name and folder",
          "placeholder": "my-fancy-bucket",
          "note": "Default Bucket Name and folder will override if 'Bucket Name and folder' field is set in metadata",
          "required": false
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "bucketName": {
              "title":"Bucket Name and folder",
              "type": "string",
              "required": false
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "deleteFile": {
      "title": "Delete file",
      "description": "Delete file from S3 bucket",
      "main": "./lib/actions/deleteObject.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Default Bucket Name and Folder",
          "placeholder": "my-fancy-bucket",
          "note": "Default Bucket Name and Folder will override if 'Bucket Name and Folder' field is set in metadata",
          "required": false
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            },
            "bucketName": {
              "title":"Bucket Name and Folder",
              "type": "string",
              "required": false
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "filename": {
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "renameFile": {
      "title": "Rename file",
      "description": "Rename file in S3 bucket",
      "main": "./lib/actions/renameObject.js",
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "bucketName": {
              "title":"Bucket Name and Folder",
              "type": "string",
              "required": true
            },
            "folder": {
              "type": "string",
              "required": false
            },
            "oldFileName": {
              "type": "string",
              "required": true
            },
            "newFileName": {
              "type": "string",
              "required": true
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "Key": {
              "type": "string",
              "required": true
            },
            "LastModified": {
              "type": "string",
              "required": true
            },
            "ETag": {
              "type": "string",
              "required": true
            },
            "Size": {
              "type": "number",
              "required": true
            },
            "StorageClass": {
              "type": "string",
              "required": true
            },
            "Owner": {
              "type": "object",
              "required": true,
              "properties": {
                "ID": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        }
      }
    },
    "streamToCsv": {
      "deprecated": true,
      "title": "Stream to CSV",
      "description": "Action is deprecated. Use 'Write file' action instead",
      "main": "./lib/actions/streamToCsv.js",
      "fields": {
        "bucketName": {
          "viewClass": "TextFieldView",
          "label": "Bucket Name",
          "placeholder": "my-fancy-bucket",
          "required": true
        },
        "keyName": {
          "viewClass": "TextFieldView",
          "label": "Key Name",
          "placeholder": "/foo/file.csv",
          "required": true
        },
        "csv": {
          "viewClass": "CSVWriteView",
          "label": "CSV Header",
          "placeholder": "Copy and paste here first (header) line of your CSV file here",
          "required": true
        }
      },
      "metadata": {
        "in": {}
      }
    }
  }
}
